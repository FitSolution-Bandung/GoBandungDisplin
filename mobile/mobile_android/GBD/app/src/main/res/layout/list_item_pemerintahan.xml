<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relContent2"
        android:layout_width="match_parent"
        android:layout_height="232dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:focusable="false">

            <ImageView
                android:id="@+id/ivRestaurant2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="@string/image_desc"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right|bottom"
                android:background="@drawable/bg_gradient" />

            <ImageView
                android:id="@+id/img_status"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/image_desc"
                android:src="@mipmap/ic_suc"
                android:visibility="visible"
                android:layout_gravity="right|top"
                android:layout_margin="20dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen_8dp">

                    <ImageView
                        android:id="@+id/ivProfile2"
                        android:layout_width="@dimen/dimen_64dp"
                        android:layout_height="@dimen/dimen_64dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/image_desc"
                        android:src="@mipmap/ava_d"

                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvRestaurantInitialName2"
                        style="@style/TextMenuMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/string_null"
                        android:textColor="@color/background_gray"
                        android:textSize="@dimen/text_24sp"
                        android:textStyle="bold" />

                    <com.bandung.disiplin.widget.rounded.RoundedImageView
                        android:id="@+id/ivLogo2"
                        android:layout_width="@dimen/dimen_64dp"
                        android:layout_height="@dimen/dimen_64dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/image_desc"
                        android:src="@mipmap/ava_f"
                        android:visibility="gone"
                        app:corner_radius="50dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingEnd="@dimen/dimen_16dp"
                    android:paddingTop="@dimen/dimen_16dp">

                    <TextView
                        android:id="@+id/tvRestaurantName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Pengedar Narkoba Ditangkap di Hotel di Jalan Asia Afrika"
                        android:textAllCaps="true"
                        android:textColor="@color/windowBackground"
                        android:textSize="@dimen/text_14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRestaurantType2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="3 jam yang lalu"
                        android:textColor="@color/windowBackground"
                        android:textSize="@dimen/text_14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvLocation2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:paddingTop="1dp"
                            android:text="Cibadak, Bandung"
                            android:textColor="@color/windowBackground"
                            android:textSize="@dimen/text_14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/image_desc"
                                android:src="@mipmap/ic_foodgasm_arrow_direction_white" />

                            <TextView
                                android:id="@+id/tvDistance2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dimen_4dp"
                                android:gravity="start"
                                android:text="12km"
                                android:textColor="@color/windowBackground"
                                android:textSize="@dimen/text_12sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#70000000"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 komentar"
                        android:textColor="@color/windowBackground"
                        android:textSize="@dimen/text_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    android:paddingRight="5dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/ic_thumb_up_white_48dp" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/ic_share_white_48dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>